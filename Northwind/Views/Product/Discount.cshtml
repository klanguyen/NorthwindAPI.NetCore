@using Northwind.Models
@model IEnumerable<Discount>

<h2 class="mt-3"><i class="fas fa-tag"></i> Product Discounts</h2>
<div class="list-group">
    @foreach (Discount d in Model)
    {
        <div class="list-group-item">
            @d.Title<br>@d.Description<br>Discount Expires: <i>@d.EndTime.ToString("MM/dd/yyyy")</i><br>
            <a href="#" class="code" data-code="@d.Code" data-product="@d.Title"><i class="far fa-hand-point-right"></i> Discount Code</a>
        </div>
    }
</div>

@foreach (Discount d in Model)
{
    <!--toast-->
    <div id="toast" class="toast">
        <div class="toast-header">
            <strong class="mr-auto" id="product">@d.Title</strong>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            Discount Code: <strong id="code">@d.Code</strong>
        </div>
    </div>
}

@section Scripts {
    <script type="text/javascript" src="/js/client.js"></script>
}
